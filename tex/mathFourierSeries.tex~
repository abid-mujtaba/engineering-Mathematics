\draw(0,0)--(0,1)node[left]{$f_1(t)$};
%
\draw[thick,domain=0:1,smooth] plot ({\x},{0.25+(\x-0.25)*(\x-0.25)});
\draw[thick,domain=0:1,smooth] plot ({-\x},{0.25+(\x-0.25)*(\x-0.25)});
\draw[thick,domain=0:1,smooth] plot ({\x-2},{0.25+(\x-0.25)*(\x-0.25)});
\draw[thick,domain=0:1,smooth] plot ({\x+2},{0.25+(\x-0.25)*(\x-0.25)});
\draw[thick,domain=0:1,smooth] plot ({2-\x},{0.25+(\x-0.25)*(\x-0.25)});
