\end{subfigure}
\begin{subfigure}{0.5\textwidth}
\centering
\begin{tikzpicture}
\draw(-2,0)--(3,0)node[right]{$t$};
\draw(0,-1)--(0,1)node[left]{$f_2(t)$};
%
\draw[thick,domain=0:1,smooth] plot ({\x},{0.25+(\x-0.25)*(\x-0.25)});
\draw[thick,domain=0:1,smooth] plot ({\x+2},{0.25+(\x-0.25)*(\x-0.25)});
\draw[thick,domain=0:1,smooth] plot ({\x-2},{0.25+(\x-0.25)*(\x-0.25)});
