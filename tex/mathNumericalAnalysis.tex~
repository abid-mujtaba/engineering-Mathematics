\label{جدول_اعدادی_فرق_ت}
\centering
\begin{otherlanguage}{english}
\begin{tabular}{|R|RRR|}
\hline
\Tstrut 
x&p_2(x)&\multicolumn{2}{C|}{\text{\urdufont{فرق}}}\\
\hline
\Tstrut 
2.0&1.4143&&\\
&&348&\\
2.1&1.4491&&-7\\
&&341&\\
2.2&1.4832&&-7\\
&&\underline{334}&\\
2.3&\underline{1.5166}&&-7\\
&&327&\\
2.4&1.5493&&-7\\
&&320&\\
2.5&1.5813&&-7\\
&&313&\\
2.6&1.6126&&\\
\hline
\end{tabular}
\end{otherlanguage}
\end{table}


\انتہا{مثال}
%===========================
