\draw(45:1.5)node[above right]{$C$};
\end{tikzpicture}
\caption*{(الف) سطح میں تکمل کی راہ (مثال \حوالہ{مثال_سمتی_تکمل_راہ_الف})}
\end{subfigure}%
\begin{subfigure}{0.5\textwidth}
\centering
\begin{tikzpicture}[x={(-0.5cm,-0.5cm)},y={(1cm,0cm)},z={(0cm,1cm)}]
