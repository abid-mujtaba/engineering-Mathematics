\draw(0,0,0)--++(0,2,0)node[right]{$y$};
\draw(0,0,0)--++(0,0,2)node[left]{$z$};
%
\draw[->-=0.5,domain=0:360,samples=200] plot ({cos (\x)},{sin(\x)},{\x/360});
%\draw[dashed,domain=0:360,samples=200] plot ({cos (\x)},{sin(\x)},{0});
