y3:x*cos(x);
y4:x*sin(x);

m:matrix([y1,y2,y3,y4],[diff(y1,x),diff(y2,x),diff(y3,x),diff(y4,x)],[diff(y1,x,2),diff(y2,x,2),diff(y3,x,2),diff(y4,x,2)],[diff(y1,x,3),diff(y2,x,3),diff(y3,x,3),diff(y4,x,3)]);
W:determinant(m);
expand(%);
trigsimp(%);

y:y1;
eq:diff(y,x,4)+2*diff(y,x,2)+y=0;
y:y2;
eq:diff(y,x,4)+2*diff(y,x,2)+y=0;
