kill(all);
print("Q 10.1");

u:a+b*t^2;
diff(u,t);
diff(u,t,2);

u:t*i+(t^2+2)*j;
diff(u,t);
diff(u,t,2);

u:4*cos(t)*i+2*sin(t)*j;
diff(u,t);
diff(u,t,2);

u:%e^(-t)*(cos(t)*i-sin(t)*j);
diff(u,t);
expand(%);
diff(u,t,2);
expand(%);

