kill(all);
print("Q 10.15");
load("vect");

i:[1,0,0];
j:[0,1,0];
k:[0,0,1];

u:x*i+3*y*k;

diff(u,x);
diff(u,y);
diff(u,z);

u:(x^2-y^2)*i+2*x*y*j;

diff(u,x);
diff(u,y);
diff(u,z);

u:x^2*i-3*y^2*j+2*z^2*k;

diff(u,x);
diff(u,y);
diff(u,z);

u:x*y*i+y*z*j+z*x*k;
diff(u,x);
diff(u,y);
diff(u,z);

u:(x+y)*i+(y+z)*j+(z+x)*k;
diff(u,x);
diff(u,y);
diff(u,z);
