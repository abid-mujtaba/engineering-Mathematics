kill(all);
print("Q 10.10");
load("vect");

i:[1,0,0];
j:[0,1,0];
k:[0,0,1];

u:t*i+t^3*k;
v:t^2*j+t*k;
w:2*i+t*j-t^2*k;

f:u . v ;
diff(f,t);

u ~ v ;
f:express(%);
diff(f,t);

u ~ (v ~ w) ;
f:express(%);
diff(f,t);
expand(%);

(u ~ v) ~ w ;
f:express(%);
diff(f,t);
expand(%);

(u ~ v) . w ;
f:express(%);
diff(f,t);
expand(%);

